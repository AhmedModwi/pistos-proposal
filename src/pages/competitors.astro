            <!-- Benchmark 1: Arnifi -->
            <div class="grid grid-cols-1 md:grid-cols-12 gap-6 bg-white border-2 border-yellow-400 p-6 rounded shadow-lg transition-shadow group relative overflow-hidden" data-aos="fade-up">
