---
import '../styles/global.css';
const { title, description = "Pistos - Business Setup Infrastructure in the UAE. Digital strategy proposal." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Pistos Pitch Deck</title>
    <meta name="description" content={description}>
    <meta name="robots" content="index, follow">
    <!-- Fonts: Outfit (EN Heading), Inter (EN Body), Tajawal (AR Heading), IBM Plex Sans Arabic (AR Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Arabic:wght@400;500;600&family=Inter:wght@400;500;600&family=Outfit:wght@400;500;600;700&family=Tajawal:wght@500;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-[#FAFAFA] text-[#1a1a1a] antialiased min-h-screen">
    <!-- Global Navigation -->
    <nav class="fixed top-0 w-full bg-[#FAFAFA]/90 backdrop-blur border-b border-[#E5E7EB] z-50">
        <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
            <span class="font-heading font-bold text-lg tracking-tight">Pistos Deck</span>
            <!-- Desktop Nav -->
            <div class="hidden md:flex space-x-8 text-sm font-medium">
                <a href="/" class="hover:text-[#A02B2E] transition-colors">Summary</a>
                <a href="/strategy" class="hover:text-[#A02B2E] transition-colors">1. Strategy</a>
                <a href="/competitors" class="hover:text-[#A02B2E] transition-colors">2. Market</a>
                <a href="/visuals" class="hover:text-[#A02B2E] transition-colors">3. Identity</a>
                <a href="/plan" class="hover:text-[#A02B2E] transition-colors">4. Roadmap</a>
            </div>
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="md:hidden p-2 text-pistos-black hover:bg-gray-100 rounded-md transition-colors" aria-label="Toggle Menu">
                <i data-lucide="menu" class="w-6 h-6"></i>
            </button>
        </div>
        <!-- Mobile Dropdown -->
        <div id="mobile-menu" class="hidden md:hidden absolute w-full bg-[#FAFAFA] border-b border-[#E5E7EB] shadow-lg">
            <div class="px-6 py-4 flex flex-col space-y-4 text-sm font-medium">
                <a href="/" class="hover:text-[#A02B2E] transition-colors py-2 border-b border-gray-100">Summary</a>
                <a href="/strategy" class="hover:text-[#A02B2E] transition-colors py-2 border-b border-gray-100">1. Strategy</a>
                <a href="/competitors" class="hover:text-[#A02B2E] transition-colors py-2 border-b border-gray-100">2. Market</a>
                <a href="/visuals" class="hover:text-[#A02B2E] transition-colors py-2 border-b border-gray-100">3. Identity</a>
                <a href="/plan" class="hover:text-[#A02B2E] transition-colors py-2">4. Roadmap</a>
            </div>
        </div>
    </nav>

    <!-- Main Content Entry -->
    <main class="pt-24 pb-32 max-w-5xl mx-auto px-6">
        <slot />
    </main>

    <script>
        import AOS from 'aos';
        import 'aos/dist/aos.css'; // Also import CSS via Vite/Astro bundler for reliability

        // Re-initialize Lucide icons on page load and view transitions
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
            
            // Initialize AOS (Animate On Scroll)
            AOS.init({
                duration: 1500, // Slower, more elegant animation
                easing: 'cubic-bezier(0.16, 1, 0.3, 1)',
                once: true,
                offset: 80, // slightly delay triggering to ensure it's well in view
            });
            
            // Mobile Menu Toggle Logic
            const mobileBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileBtn && mobileMenu) {
                mobileBtn.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
                
                // Close menu when clicking a link
                mobileMenu.querySelectorAll('a').forEach(link => {
                    link.addEventListener('click', () => {
                        mobileMenu.classList.add('hidden');
                    });
                });
            }
        });
    </script>
</body>
</html>
